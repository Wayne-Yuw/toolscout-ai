# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/toolscout
DATABASE_ECHO=False

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://localhost:6379/0

# ==========================================
# API Keys
# ==========================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Custom Search
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here
GOOGLE_CSE_ENGINE_ID=your_search_engine_id_here

# ==========================================
# Application Configuration
# ==========================================
APP_NAME=ToolScout AI
APP_VERSION=0.1.0
API_PREFIX=/api/v1
DEBUG=True

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# ==========================================
# Security
# ==========================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# External Services
# ==========================================
# Jina AI Reader
JINA_READER_API_KEY=optional_jina_api_key

# Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=toolscout-storage
AWS_REGION=us-east-1

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_PER_MINUTE=60
